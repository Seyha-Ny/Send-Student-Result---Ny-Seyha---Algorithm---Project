# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///student_results.db

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@studentresults.com
MAIL_OWNER_EMAIL=owner_email@example.com # Optional: Email address to send a copy of all student results

# For Gmail, you need to:
# 1. Enable 2-Factor Authentication
# 2. Generate an App Password at https://myaccount.google.com/apppasswords
# 3. Use the App Password in MAIL_PASSWORD field

# Alternative: Use other SMTP providers
# Outlook: smtp.office365.com (port 587)
# SendGrid: smtp.sendgrid.net (port 587)
# AWS SES: email-smtp.region.amazonaws.com (port 587)
